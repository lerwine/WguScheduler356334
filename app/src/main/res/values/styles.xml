    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="WGU.Scheduler.ButtonStyle" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="WGU.Scheduler.FieldLabel" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WGU.Scheduler.ErrorText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_error</item>
        <item name="colorPrimary">@color/color_error_light</item>
        <item name="colorPrimaryDark">@color/color_error</item>
        <item name="colorAccent">@color/color_error_accent</item>
    </style>

    <style name="WGU.Scheduler.SuccessText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <style name="WGU.Scheduler.TextInputEditText" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="WGU.Scheduler.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="chipBackgroundColor">@color/color_primary</item>
        <item name="chipStrokeColor">@color/color_on_primary</item>
        <item name="closeIconTint">@color/color_on_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="WGU.Scheduler.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="chipBackgroundColor">@color/color_primary</item>
        <item name="chipStrokeColor">@color/color_on_primary</item>
        <item name="closeIconTint">@color/color_on_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="WGU.Scheduler.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="chipBackgroundColor">@color/color_primary</item>
        <item name="chipStrokeColor">@color/color_on_primary</item>
        <item name="closeIconTint">@color/color_on_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inline_command_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:backgroundTint">@color/color_accent</item>-->
        <item name="android:scaleX">1.25</item>
        <item name="android:scaleY">1.25</item>
        <!--        <item name="android:tint">@color/color_primary_inverse</item>-->
        <item name="android:translationY">2dp</item>
    </style>

    <style name="list_item_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/control_margin</item>
        <item name="android:layout_marginEnd">@dimen/control_margin</item>
        <item name="android:layout_marginTop">@dimen/control_margin</item>
        <item name="android:layout_marginBottom">@dimen/control_margin</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <style name="list_item_text_primary" parent="list_item_text">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="list_item_text_primary_indent" parent="list_item_text_primary">
        <item name="android:layout_marginStart">@dimen/text_margin</item>
    </style>

    <style name="list_item_text_secondary" parent="list_item_text">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="list_item_text_secondary_indent" parent="list_item_text_secondary">
        <item name="android:layout_marginStart">@dimen/text_margin</item>
    </style>

    <style name="command_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:backgroundTint">@color/color_accent</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

</resources>