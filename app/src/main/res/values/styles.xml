<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="WGU.Scheduler.FieldLabel" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WGU.Scheduler.ErrorText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_error_dark</item>
        <item name="colorPrimary">@color/color_error</item>
        <item name="colorPrimaryDark">@color/color_error_dark</item>
        <item name="colorAccent">@color/color_error_accent</item>
    </style>

    <style name="WGU.Scheduler.TextInputEditText" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="linear_edit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:backgroundTint">@color/color_accent</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:scaleX">1.25</item>
        <item name="android:scaleY">1.25</item>
        <item name="android:tint">@color/color_primary_inverse</item>
    </style>

    <style name="inline_command_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_accent</item>
        <item name="android:scaleX">1.25</item>
        <item name="android:scaleY">1.25</item>
        <item name="android:tint">@color/color_primary_inverse</item>
        <item name="android:translationY">2dp</item>
    </style>

</resources>