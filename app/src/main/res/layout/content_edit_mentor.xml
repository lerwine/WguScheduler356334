<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/text_view_mentor_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/edit_text_mentor_name"
        android:text="@string/mentor_name"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/edit_text_mentor_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_mentor_name"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/text_view_mentor_name_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_mentor_name_label"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/text_view_mentor_name_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textAppearance="@style/WGU.Scheduler.ErrorText"
        app:layout_constraintBottom_toTopOf="@id/text_view_mentor_email_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_mentor_name" />

    <TextView
        android:id="@+id/text_view_mentor_email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:text="@string/email_address"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_mentor_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_mentor_name_error" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_mentor_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_mentor_add_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_mentor_email_label"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_mentor_add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:clickable="true"
        android:src="@drawable/ic_two_tone_add_circle_24"
        android:tint="@color/colorAccentInverse"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/text_view_mentor_phone_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_mentor_email" />

    <TextView
        android:id="@+id/text_view_mentor_phone_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:text="@string/phone_number"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_mentor_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mentor_add_address" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_mentor_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_mentor_add_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_mentor_phone_label"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_mentor_add_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:clickable="true"
        android:src="@drawable/ic_two_tone_add_circle_24"
        android:tint="@color/colorAccentInverse"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/text_view_mentor_notes_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_mentor_phone" />

    <TextView
        android:id="@+id/text_view_mentor_notes_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:labelFor="@id/edit_text_mentor_notes"
        android:text="@string/notes"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/edit_text_mentor_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mentor_add_phone" />

    <EditText
        android:id="@+id/edit_text_mentor_notes"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_mentor_notes_label"
        tools:ignore="Autofill" />

</androidx.constraintlayout.widget.ConstraintLayout>