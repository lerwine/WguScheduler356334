<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageDataActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_all_data_delete_warning"
        android:textAppearance="@style/WGU.Scheduler.ErrorText"
        android:textSize="24sp" />

    <Button
        android:id="@+id/resetDatabaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="@string/command_reset_database" />

    <Button
        android:id="@+id/addSampleDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/command_add_sample_data" />
</LinearLayout>