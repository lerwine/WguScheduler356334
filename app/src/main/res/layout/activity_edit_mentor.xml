<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMentorActivity">

    <TextView
        android:id="@+id/mentorNameLabelTextView"
        style="@style/WGU.Scheduler.FieldLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/mentorNameEditText"
        android:text="@string/label_mentor_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mentorNameEditText"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentorNameLabelTextView" />

    <TextView
        android:id="@+id/phoneNumberLabelTextView"
        style="@style/WGU.Scheduler.FieldLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/phoneNumberEditText"
        android:text="@android:string/emptyPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentorNameEditText" />

    <EditText
        android:id="@+id/phoneNumberEditText"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberLabelTextView" />

    <TextView
        android:id="@+id/emailAddressLabelTextView"
        style="@style/WGU.Scheduler.FieldLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/emailAddressEditText"
        android:text="@string/label_email_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberEditText" />

    <EditText
        android:id="@+id/emailAddressEditText"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressLabelTextView" />

    <TextView
        android:id="@+id/mentorNotesLabelTextView"
        style="@style/WGU.Scheduler.FieldLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/mentorNotesTextView"
        android:text="@string/label_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressEditText" />

    <TextView
        android:id="@+id/mentorNotesTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintBottom_toTopOf="@+id/saveMentorImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentorNotesLabelTextView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editMentorNotesFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_margin"
        android:clickable="true"
        app:backgroundTint="@color/color_secondary_variant"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/mentorNotesTextView"
        app:layout_constraintEnd_toEndOf="@+id/mentorNotesTextView"
        app:srcCompat="@drawable/edit_icon" />

    <ImageButton
        android:id="@+id/saveMentorImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteMentorImageButton"
        app:srcCompat="@drawable/save_icon" />

    <ImageButton
        android:id="@+id/deleteMentorImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelImageButton"
        app:srcCompat="@drawable/delete_icon" />

    <ImageButton
        android:id="@+id/cancelImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/undo_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>