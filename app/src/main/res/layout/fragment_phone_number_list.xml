<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="Erwine.Leonard.T.wguscheduler356334.PhoneNumberListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mentor.PhoneNumberListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phoneNumberListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/addPhoneButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/fragment_phone_number_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPhoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:backgroundTint="@color/color_accent"
        android:clickable="true"
        android:src="@drawable/add_circle_24"
        android:tint="@color/color_accent_inverse"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>