<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/text_view_term_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameOfTerm"
        android:labelFor="@id/edit_text_term_name"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/edit_text_term_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_term_name"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/text_view_term_name_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_name_label"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/text_view_term_name_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textAppearance="@style/WGU.Scheduler.ErrorText"
        app:layout_constraintBottom_toTopOf="@id/text_view_term_start_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_term_name" />

    <TextView
        android:id="@+id/text_view_term_start_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:text="@string/startOfTerm"
        android:labelFor="@id/edit_text_term_start"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/edit_text_term_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_name_error" />

    <EditText
        android:id="@+id/edit_text_term_start"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/text_view_term_start_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_start_label"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/text_view_term_start_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textAppearance="@style/WGU.Scheduler.ErrorText"
        app:layout_constraintBottom_toTopOf="@id/text_view_term_end_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_term_start" />

    <TextView
        android:id="@+id/text_view_term_end_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:text="@string/endOfTerm"
        android:labelFor="@id/edit_text_term_end"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/edit_text_term_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_start_error" />

    <EditText
        android:id="@+id/edit_text_term_end"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/text_view_term_end_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_end_label"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/text_view_term_end_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/required"
        android:textAppearance="@style/WGU.Scheduler.ErrorText"
        app:layout_constraintBottom_toTopOf="@id/text_view_term_notes_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_term_end" />

    <TextView
        android:id="@+id/text_view_term_notes_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:labelFor="@id/edit_text_term_notes"
        android:text="@string/notes"
        android:textAppearance="@style/WGU.Scheduler.FieldLabel"
        app:layout_constraintBottom_toTopOf="@id/edit_text_term_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_end_error" />

    <EditText
        android:id="@+id/edit_text_term_notes"
        style="@style/WGU.Scheduler.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_term_notes_label"
        tools:ignore="Autofill" />
</androidx.constraintlayout.widget.ConstraintLayout>